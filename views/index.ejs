<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Analytics Service</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="header">
    <h1>âš¡ Analytics Service</h1>
    <p>Event analytics across all connected applications</p>
  </header>

  <main class="dashboard">
    <div class="filters">
      <a href="/" class="filter-btn <%= currentSource === 'all' ? 'active' : '' %>">All Sources</a>
      <% sources.forEach(s => { %>
        <a href="/?source=<%= s.source %>" class="filter-btn <%= currentSource === s.source ? 'active' : '' %>"><%= s.source %></a>
      <% }) %>
    </div>

    <section class="summary-cards">
      <div class="card">
        <span class="card-label">Total Events</span>
        <span class="card-value"><%= total %></span>
      </div>
      <div class="card">
        <span class="card-label">Events Today</span>
        <span class="card-value"><%= today %></span>
      </div>
      <div class="card">
        <span class="card-label">Active Sources</span>
        <span class="card-value"><%= sources.length %></span>
      </div>
      <div class="card">
        <span class="card-label">Top Event</span>
        <span class="card-value"><%= topEvent.event_type %></span>
        <span class="card-sub"><%= topEvent.count %> occurrences</span>
      </div>
    </section>

    <section class="top-events">
      <h2>Top Event Types</h2>
      <div class="top-list">
        <% const maxCount = topStats.length > 0 ? topStats[0].event_count : 1; %>
        <% topStats.forEach(event => { %>
          <div class="top-item">
            <span class="top-name"><%= event.event_type %></span>
            <div class="top-bar-bg">
              <div class="top-bar-fill" style="width: <%= (event.event_count / maxCount * 100) %>%"></div>
            </div>
            <span class="top-count"><%= event.event_count %></span>
          </div>
        <% }) %>
      </div>
    </section>

    <section class="recent-events">
      <h2>Recent Events</h2>
      <table class="events-table">
        <thead>
          <tr>
            <th>Source</th>
            <th>Event Type</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% recents.forEach(event => { %>
            <tr>
              <td><span class="source-badge <%= event.source %>"><%= event.source %></span></td>
              <td><%= event.event_type %></td>
              <td><%= new Date(event.occurred_at).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section class="daily-stats">
      <h2>Daily Volume</h2>
      <table class="events-table">
        <thead>
          <tr>
            <th>Source</th>
            <th>Date</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody>
          <% daily.forEach(event => { %>
            <tr>
              <td><span class="source-badge <%= event.source %>"><%= event.source %></span></td>
              <td><%= new Date(event.day).toLocaleDateString() %></td>
              <td><%= event.count %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section class="endpoint-info">
      <h2>Ingest Endpoint</h2>
      <p>Send events from any application</p>
      <div class="endpoint-url">
        <span class="method-badge">POST</span>
        <span>/api/events</span>
      </div>
    </section>
  </main>
</body>
</html>